<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardElevation="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/frag_news_item_image"
                android:src="@drawable/no_preview_available"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/sircle_drawable"
                android:layout_margin="16dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/frag_news_item_adult_layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="@string/adult_label"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="«ВКонтакте» запускает фильтр нежелательных комментариев"
                android:ellipsize="end"
                android:id="@+id/frag_news_item_title"
                android:layout_below="@+id/frag_news_item_image"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:maxLines="2"
                android:textColor="@color/primary_text"
                android:textSize="21sp" />

            <TextView
                tools:text="Разработчики «ВКонтакте» вводят новую полезную функцию для сообществ социальной сети. Теперь все нежелательные комментарии будут автоматически блокироваться системой."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:id="@+id/frag_news_item_description"
                android:layout_below="@+id/frag_news_item_title"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frag_news_item_description">
<include layout="@layout/divider"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/frag_news_item_date"
                    android:layout_toStartOf="@+id/frag_news_item_date"
                    android:id="@+id/frag_news_item_location"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:text="Medium Text"
                        android:id="@+id/frag_news_item_location_title"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:textSize="16sp"
                        android:minLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        tools:text="Small Text"
                        android:id="@+id/frag_news_item_location_is_open"
                        android:paddingLeft="16dp"
                        android:textSize="12sp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="10 сентября, 16:30"
                    android:id="@+id/frag_news_item_date"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignBottom="@+id/frag_news_item_location"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textStyle="italic" />

                <TintImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/secondary_text"
                    android:layout_toLeftOf="@+id/frag_news_item_date"
                    android:layout_toStartOf="@+id/frag_news_item_date"
                    android:src="@drawable/ic_action_calendar"
                    android:layout_margin="8dp" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>